<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.deadline.mapper.DeadlineMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->
	
	<resultMap id="deadlineMap" type="com.dcits.govsbu.sd.taxbankplatform.deadline.model.DeadlineEntity">
		<id property="id" column="ld_id"/>
		<result property="deadlineName" column="ld_name" />
		<result property="code" column="ld_code" />
		<result property="enabled" column="enabled"/>
	</resultMap>

	<!-- 搜索数据 -->
	<select id="queryListByPage" parameterType="map" resultMap="deadlineMap" flushCache="true" useCache="true">
		SELECT *
		FROM tb_loan_deadline
		<where>
			<if test="deadlineName != null and deadlineName != ''">
			ld_name LIKE CONCAT('%','${deadlineName}','%' )
			</if>
			and enabled = 'Y'
		</where>
	</select>
	
	<!-- 插入数据 -->
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.deadline.model.DeadlineEntity">
		insert into tb_loan_deadline (
			ld_id,
			ld_name,
			ld_code,
			enabled
			)   
		values (
			#{id},
			#{deadlineName},
			#{code},
			#{enabled}
			)  
	</insert>
	
	<!-- 查询数据，验证数据是否存在 -->
	<select id="findByName" parameterType="String" resultMap="deadlineMap" flushCache="true" useCache="true">
		SELECT * 
		FROM tb_loan_deadline
		where ld_code = #{name} and enabled = 'Y'
	</select>
	
	<!-- 删除数据（逻辑删除） -->
	<update id="delDeadline" parameterType="com.dcits.govsbu.sd.taxbankplatform.deadline.model.DeadlineEntity"  flushCache="true">
		update tb_loan_deadline
		set enabled = 'N'
		where ld_id = #{id}
	</update>
	<!-- 根据ID查找对象 add by baolong.hu -->
	<select id="findById" parameterType="String" resultMap="deadlineMap" flushCache="true" useCache="true">
		select 
	    	ld_name,
			ld_code,
			enabled
	    from tb_loan_deadline
	    where ld_id = #{id}
	</select>
</mapper>