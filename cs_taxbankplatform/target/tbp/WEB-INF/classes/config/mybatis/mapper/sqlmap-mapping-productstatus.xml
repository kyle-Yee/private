<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.productstatus.mapper.ProductStatusMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->
	
	
	
	
	
	<resultMap id="productStatusMap" type="com.dcits.govsbu.sd.taxbankplatform.productstatus.model.ProductStatusEntity">
		<id property="id" column="ps_id"/>
		<result property="productStatusName" column="ps_name" />
		<result property="code" column="ps_code" />
		<result property="enabled" column="enabled"/>
	</resultMap>

	<!-- 插入数据 -->
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.productstatus.model.ProductStatusEntity" useGeneratedKeys="true" keyProperty="ps_id">
		insert into tb_product_status (
			ps_name,
			ps_code,
			enabled
			)   
		values (
			#{productStatusName},
			#{code},
			#{enabled}
			)  
	</insert>
	
	<!-- 查询数据，验证数据是否存在 -->
	<select id="findByName" parameterType="String" resultMap="productStatusMap" flushCache="true" useCache="true">
		SELECT * 
		FROM tb_product_status
		where ps_name = #{productStatusName} and enabled = 'Y'
	</select>
	
	<!-- 搜索数据 -->
	<select id="queryListByPage" parameterType="map" resultMap="productStatusMap" flushCache="true" useCache="true">
		SELECT *
		FROM tb_product_status
		<where>
			<if test="productStatusName != null and productStatusName != ''">
			ps_name = #{productStatusName}
			</if>
			and enabled = 'Y'
		</where>
	</select>
	
	<!-- 删除数据（逻辑删除） -->
	<update id="delproductStatus" parameterType="com.dcits.govsbu.sd.taxbankplatform.productstatus.model.ProductStatusEntity"  flushCache="true">
		update tb_product_status
		set enabled = 'N'
		where ps_id = #{id}
	</update>
	<select id="findById" parameterType="String" resultMap="productStatusMap" flushCache="true" useCache="true">
		select 
	    	*
	    from tb_product_status
	    where ps_id = #{id}
	</select>
</mapper>