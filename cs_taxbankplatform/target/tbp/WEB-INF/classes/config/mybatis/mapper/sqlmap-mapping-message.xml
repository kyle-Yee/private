<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.message.mapper.MessageMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->
	
	<resultMap id="messageMap" type="com.dcits.govsbu.sd.taxbankplatform.message.model.MessageEntity">
		<id property="id" column="m_id"/>
		<result property="title" column="m_title" />
		<result property="subtitle" column="m_subtitle" />
		<result property="content" column="m_content" />
		<result property="userId" column="userId" />
		<result property="creatorid" column="creatorid" />
		<result property="createtime" column="createtime" />
		<result property="updatorid" column="updatorid" />
		<result property="updatetime" column="updatetime" />
		<result property="enabled" column="enabled"/>
		<result property="unread" column="unread"/>
		<association property="messageType" column="id" javaType="com.dcits.govsbu.sd.taxbankplatform.messageType.model.MessageType">
	        <id property="id" column="mt_id"/>
			<result property="typeName" column="mt_name" />
			<result property="creatorid" column="creatorid" />
			<result property="createtime" column="createtime" />
			<result property="updatorid" column="updatorid" />
			<result property="updatetime" column="updatetime" />
			<result property="enabled" column="enabled"/>
	    </association>
	</resultMap>

	<!-- 插入数据 -->
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.message.model.MessageEntity" useGeneratedKeys="true" keyProperty="la_id">
		insert into tb_message (
			m_id,
			m_title,
			m_subtitle,
			m_content,
			userId,
			<if test="messageType != null and messageType != ''">
			type,
			</if>
			creatorid,
			createtime,
			updatorid,
			updatetime,
			enabled,
			unread
			)   
		values (
			#{id},
			#{title},
			#{subtitle},
			#{content},
			#{userId},
			<if test="messageType != null and messageType != ''">
			#{messageType.id},
			</if>
			#{creatorid},
			now(),
			#{updatorid},
			now(),
			#{enabled},
			#{unread}
			)  
	</insert>
	
	<!-- 查询数据，验证数据是否存在 -->
	<select id="findByName" parameterType="String" resultMap="messageMap" flushCache="true" useCache="true">
		SELECT * FROM tb_message
		where m_title = #{title} and enabled = 'Y'
	</select>
	
	<!-- 搜索数据 -->
	<select id="queryListByPage" parameterType="map" resultMap="messageMap" flushCache="true" useCache="true">
		SELECT *
		FROM tb_message
		<where>
			enabled = 'Y' 
			<if test="userId != null and userId != ''">
			and userId = #{userId} 
			</if>
			<if test="unread != null and unread != ''">
			and unread = #{unread} 
			</if>
			<if test="messageType != null and messageType != ''">
			and type = #{messageType} 
			</if>
			<if test="title != null and title != ''">
			and m_title LIKE CONCAT('%','${title}','%' ) 
			</if>
		</where>
	</select>
	
	<!-- 删除数据（逻辑删除） -->
	<update id="delmessage" parameterType="com.dcits.govsbu.sd.taxbankplatform.message.model.MessageEntity"  flushCache="true">
		update tb_message
		set enabled = 'N'
		where m_id = #{id}
	</update>
	
	<!-- 根据ID查找对象  -->
	<select id="findById" parameterType="String" resultMap="messageMap" flushCache="true" useCache="true">
		select * from tb_message
	    where m_id = #{id}
	</select>
	
	<!-- 更新数据 -->
	<update id="update" parameterType="com.dcits.govsbu.sd.taxbankplatform.message.model.MessageEntity" flushCache="true">
		update tb_message
		<set>
			<if test="unread != null and unread != ''">
				unread = #{unread},
			</if>
			<if test="enabled != null and enabled != ''">
				enabled = #{enabled},
			</if>
			<if test="updatorid != null">
	       		updatorid = #{updatorid,jdbcType=INTEGER},
		     </if>
		     <if test="updatetime != null">
		       	updatetime = now(),
		     </if>
			</set>
		where m_id = #{id}
	</update>
</mapper>