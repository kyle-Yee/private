<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.repaymentway.mapper.RepaymentWayMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->

	<sql id="repaymentwayAttributes">
		rw_id,
		rw_name,
		rw_code,
		enabled
	</sql>

	<resultMap id="repaymentwayMap" type="com.dcits.govsbu.sd.taxbankplatform.repaymentway.model.RepaymentWayEntity">
		<id property="id" column="rw_id"/>
		<result property="rwname" column="rw_name"/>
		<result property="rwcode" column="rw_code"/>
		<result property="enabled" column="enabled"/>
	</resultMap>
	
	<select id="queryListByPage" parameterType="map" resultMap="repaymentwayMap" flushCache="true" useCache="true">
		<!-- 
			偏移offset较小的时候，直接使用limit较优；
			偏移offset较大的时候，使用下面子查询的方式较优；
			具体可以根据业务情况选择 
		-->
		<!-- 
		select <include refid="userAttributes" /> from tb_user Where u_id >=(
		select u_id from tb_user order by u_id limit ${start},1
		) limit ${pageNumber}
		 -->
		SELECT <include refid="repaymentwayAttributes" /> FROM tb_repayment_way where enabled='Y'
		<if test="rwname != null and rwname != ''">
			rw_name like CONCAT('%',#{rwname},'%')
		</if>
	</select>
	
	<select id="findById" parameterType="String" resultMap="repaymentwayMap" flushCache="true" useCache="true">
		select 
	    <include refid="repaymentwayAttributes" />
	    from tb_repayment_way 
	    where rw_id = #{id}
	</select>
	
	<select id="queryListAll" parameterType="map" resultMap="repaymentwayMap" flushCache="true" useCache="true" >
		select <include refid="repaymentwayAttributes" /> from tb_repayment_way where enabled='Y'
	</select>
	
	
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.repaymentway.model.RepaymentWayEntity" useGeneratedKeys="true" keyProperty="id">
		insert ignore into tb_repayment_way (
		        rw_id,
				rw_name,
				rw_code,
				enabled
			)   
		values (
		         #{id},
				#{rwname},
				#{rwcode},
				#{enabled}
			)  
	</insert>
	
	<update id="update" parameterType="com.dcits.govsbu.sd.taxbankplatform.repaymentway.model.RepaymentWayEntity" flushCache="true">
		update tb_repayment_way
	    <set >
	      <if test="rwname != null" >
	        rw_name = #{rwname},
	      </if>
	      <if test="rwcode != null" >
	        rw_code = #{rwcode},
	      </if>
	       <if test="enabled != null" >
	        enabled = #{enabled},
	      </if>
	    </set>
	    where rw_id = #{id}
	</update>
	
	<delete id="deleteBatchById" parameterType="list">
		<![CDATA[  
       delete from tb_repayment_way where rw_id in  
    	]]>  
	    <foreach collection="list" item = "id" open="(" separator="," close=")">
	    #{id}  
	    </foreach>  
	</delete>
	
</mapper>