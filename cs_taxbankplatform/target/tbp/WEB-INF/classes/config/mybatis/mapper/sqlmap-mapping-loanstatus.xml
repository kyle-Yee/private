<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.loanstatus.mapper.LoanStatusMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->

	<sql id="loanstatusAttributes">
		ls_id,
		ls_name,
		ls_code,
		enabled
	</sql>

	<resultMap id="loanstatusMap" type="com.dcits.govsbu.sd.taxbankplatform.loanstatus.model.LoanStatusEntity">
		<id property="id" column="ls_id"/>
		<result property="lsname" column="ls_name"/>
		<result property="lscode" column="ls_code"/>
		<result property="enabled" column="enabled"/>
	</resultMap>
	
	<select id="queryListByPage" parameterType="map" resultMap="loanstatusMap" flushCache="true" useCache="true">
		<!-- 
			偏移offset较小的时候，直接使用limit较优；
			偏移offset较大的时候，使用下面子查询的方式较优；
			具体可以根据业务情况选择 
		-->
		<!-- 
		select <include refid="userAttributes" /> from tb_user Where u_id >=(
		select u_id from tb_user order by u_id limit ${start},1
		) limit ${pageNumber}
		 -->
		SELECT <include refid="loanstatusAttributes" /> FROM tb_loan_status where enabled='Y'
		<if test="lsname != null and lsname != ''">
				ls_name like CONCAT('%',#{lsname},'%')
		</if>
	</select>
	
	<select id="findById" parameterType="String" resultMap="loanstatusMap" flushCache="true" useCache="true">
		select 
	    <include refid="loanstatusAttributes" />
	    from tb_loan_status
	    where ls_id = #{id}
	</select>
	
	<select id="queryListAll" parameterType="map" resultMap="loanstatusMap" flushCache="true" useCache="true" >
		select <include refid="loanstatusAttributes" /> from tb_loan_status where enabled='Y'
	</select>
	
	
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.loanstatus.model.LoanStatusEntity" useGeneratedKeys="true" keyProperty="id">
		insert ignore into tb_loan_status (
		        id,
				ls_name,
				ls_code,
				enabled
			)   
		values (
		        #{id},
				#{lsname},
				#{lscode},
				#{enabled}
			)  
	</insert>
	
	<update id="update" parameterType="com.dcits.govsbu.sd.taxbankplatform.loanstatus.model.LoanStatusEntity" flushCache="true">
		update tb_loan_status
	    <set >
	      <if test="lsname != null" >
	        ls_name = #{lsname},
	      </if>
	      <if test="lscode != null" >
	        ls_code = #{lscode},
	      </if>
	       <if test="enabled != null" >
	        enabled = #{enabled}
	      </if>
	    </set>
	    where ls_id = #{id}
	</update>
	
	<delete id="deleteBatchById" parameterType="list">
		<![CDATA[  
       delete from tb_loan_status where ls_id in  
    	]]>  
	    <foreach collection="list" item = "id" open="(" separator="," close=")">
	    #{id}  
	    </foreach>  
	</delete>
	
</mapper>