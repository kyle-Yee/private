<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.provincecities.mapper.ProvinceCitiesMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->

	<sql id="provincecitiesAttributes">
		pc_id,
		pc_pid,
		pc_code,
		pc_name
	</sql>

	<resultMap id="provincecitiesMap" type="com.dcits.govsbu.sd.taxbankplatform.provincecities.model.ProvinceCitiesEntity">
		<id property="id" column="pc_id"/>
		<result property="pcpid" column="pc_pid"/>
		<result property="pccode" column="pc_code"/>
		<result property="pcname" column="pc_name"/>
	</resultMap>
	
	<select id="queryListByPage" parameterType="map" resultMap="provincecitiesMap" flushCache="true" useCache="true">
		<!-- 
			偏移offset较小的时候，直接使用limit较优；
			偏移offset较大的时候，使用下面子查询的方式较优；
			具体可以根据业务情况选择 
		-->
		<!-- 
		select <include refid="userAttributes" /> from tb_user Where u_id >=(
		select u_id from tb_user order by u_id limit ${start},1
		) limit ${pageNumber}
		 -->
		SELECT <include refid="provincecitiesAttributes" /> FROM tb_province_cities
		where enable = 'Y'
			<if test="pcname != null and pcname != ''">
				and pc_name like CONCAT('%',#{pcname},'%')
			</if>
			<if test="pcpid != null and pcpid != ''">
				and pc_pid = #{pcpid}
			</if>
		
	</select>
	
	<select id="findById" parameterType="String" resultMap="provincecitiesMap" flushCache="true" useCache="true">
		select 
	    <include refid="provincecitiesAttributes" />
	    from tb_province_cities
	    where pc_id = #{id} and enable = 'Y'
	</select>
	
	<select id="findByPccode" parameterType="String" resultMap="provincecitiesMap" flushCache="true" useCache="true">
		select 
	    <include refid="provincecitiesAttributes" />
	    from tb_province_cities
	    where pc_code = #{pccode} and enable = 'Y'
	</select>
	
	<select id="queryListAll" parameterType="map" resultMap="provincecitiesMap" flushCache="true" useCache="true" >
		select <include refid="provincecitiesAttributes" /> from tb_province_cities where enable = 'Y'
	</select>
	
	
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.provincecities.model.ProvinceCitiesEntity">
		insert ignore into tb_province_cities (
				pc_pid,
				pc_name,
				pc_code
			)   
		values (
		        #{pcpid},
				#{pcname},
				
				#{pccode}
			)  
	</insert>
	
	<update id="update" parameterType="com.dcits.govsbu.sd.taxbankplatform.provincecities.model.ProvinceCitiesEntity" flushCache="true">
		update tb_province_cities
	    <set >
	      <if test="pcname != null" >
	        pc_name = #{pcname},
	      </if>
	      <if test="pcpid != null" >
	        pc_pid = #{pcpid},
	      </if>
	       <if test="pccode != null" >
	        pc_code = #{pccode},
	      </if>
	    </set>
	    where pc_id = #{id}
	</update>
	
	<delete id="deleteBatchById" parameterType="list">
		<![CDATA[  
       delete from tb_province_cities where pc_id in  
    	]]>  
	    <foreach collection="list" item = "id" open="(" separator="," close=")">
	    #{id}  
	    </foreach>  
	</delete>
	<select id="findPcID" parameterType="map" resultMap="provincecitiesMap" flushCache="true" useCache="true">
		select distinct(tb_province_cities.pc_id) from tb_user
        join tb_regions on tb_regions.region_id=tb_user.region_id
		join tb_province_cities on tb_province_cities.pc_code=tb_regions.region_code  where tb_user.region_id=#{region_id}
	</select>
	
	<!-- 通过pccode前两位判断传入的pcid是否属于指定的省市区 -->
	<select id="selectPccodeById" parameterType="java.util.Map" resultType="java.lang.Integer">
		
		SELECT count(1) FROM tb_province_cities pc 
		JOIN tb_province_cities pc2 ON SUBSTRING(pc2.pc_code,1,2) = SUBSTRING(pc.pc_code,1,2)
		WHERE pc.pc_id=#{pcId} AND pc2.pc_name=#{placeName}
		
	</select>
	<select id="findAll" parameterType="String" resultMap="provincecitiesMap" flushCache="true" useCache="true">
		select 
	    <include refid="provincecitiesAttributes" />
	    from tb_province_cities pc where 
        pc.pc_id = #{id} or pc.pc_pid = #{id}
		or pc.pc_pid in (select pcs.pc_id from tb_province_cities pcs where pcs.pc_pid = #{id}) 
	</select>
	
</mapper>