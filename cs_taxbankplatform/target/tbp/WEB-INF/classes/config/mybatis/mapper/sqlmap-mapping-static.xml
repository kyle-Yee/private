<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.tbpStatic.mapper.StaticMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->
	
	<resultMap id="staticMap" type="com.dcits.govsbu.sd.taxbankplatform.tbpStatic.model.StaticEntity">
		<id property="id" column="si_id"/>
		<result property="cityId" column="region_id" />
		<result property="codeId" column="sc_id"/>
		<result property="content" column="si_content" />
		<result property="enabled" column="enabled"/>
		<result property="codeName" column="sc_name"/>
		<result property="code" column="sc_code"/>
		<result property="cityName" column="region_name" />
		<result property="creatorid" column="creatorid"/>
		<result property="createtime" column="createtime"/>
		<result property="updatorid" column="updatorid"/>
		<result property="updatetime" column="updatetime"/>
	</resultMap>
	
		<!-- 搜索数据 -->
	<select id="queryListByPage" parameterType="map" resultMap="staticMap" flushCache="true" useCache="true">
		SELECT
		si.si_id,
		si.si_content,
		si.enabled,
		sc.sc_name,
		sc.sc_code,
		r.region_name
		FROM tb_static_info si LEFT JOIN tb_static_code sc ON si.sc_id = sc.sc_id LEFT JOIN tb_regions r ON si.region_id = r.region_id
		<where>
			<if test="name != null and name != ''">
			sc.sc_name LIKE CONCAT('%','${name}','%' )
			</if>
			and sc.sc_code = #{code} and si.region_id = #{cityId}
		</where>
	</select>
	
	<!-- 点击编辑按钮时候查询单条数据 -->
	<select id="findById" parameterType="String" resultMap="staticMap" flushCache="true" useCache="true">
		SELECT 
		si.si_content,
		si.enabled,
		sc.sc_name,
		sc.sc_code,
		r.region_name
		FROM tb_static_info si LEFT JOIN tb_static_code sc ON si.sc_id = sc.sc_id LEFT JOIN tb_regions r ON si.region_id = r.region_id
		where si.si_id = #{id}
	</select>
	
	<!-- 根据code查询codeID -->
	<select id="searchByCode" parameterType="map" resultMap="staticMap" flushCache="true" useCache="true">
		SELECT sc_id FROM tb_static_code where sc_code = #{code}
	</select>
	
	<!-- 根据regionId查询数据是否存在 -->
	<select id="searchListByRegionId" parameterType="com.dcits.govsbu.sd.taxbankplatform.tbpStatic.model.StaticEntity" resultMap="staticMap" flushCache="true" useCache="true">
		SELECT si.si_id FROM tb_static_info si LEFT JOIN tb_static_code sc ON si.sc_id = sc.sc_id
		where si.region_id = #{cityId} and si.enabled = 'Y' and sc.sc_code = #{code}
	</select>
	
	<!-- 插入数据 -->
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.tbpStatic.model.StaticEntity" useGeneratedKeys="true" keyProperty="si_id">
		insert into tb_static_info (
			si_id,region_id,sc_id,si_content,enabled,creatorid,createtime,updatorid,updatetime
			)   
		values (
			#{id},
			#{cityId},
			#{codeId},
			#{content},
			#{enabled},
			#{creatorid},
			#{createtime},
			#{updatorid},
			#{updatetime}
			)  
	</insert>
	
	<!-- 更新数据 -->
	<update id="update" parameterType="com.dcits.govsbu.sd.taxbankplatform.tbpStatic.model.StaticEntity" flushCache="true">
		update tb_static_info
		<set>
			<if test="content != null and content != ''">
				si_content = #{content},
			</if>
			<if test="enabled != null and enabled != ''">
				enabled = #{enabled},
			</if>
			updatorid = #{updatorid},
			updatetime = now()
		</set>
		where si_id = #{id}
	</update>
</mapper>