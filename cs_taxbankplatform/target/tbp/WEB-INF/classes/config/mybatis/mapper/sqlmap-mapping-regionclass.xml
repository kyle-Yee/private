<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.regionclass.mapper.RegionclassMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<resultMap id="regionclassMap" type="com.dcits.govsbu.sd.taxbankplatform.regionclass.model.RegionclassEntity" >
		<id property="id" column="rc_id"/>
		<result property="rcName" column="rc_name"/>
		<result property="rcDescription" column="rc_description"/>
	</resultMap>
	
	<!-- 插入数据 -->
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.regionclass.model.RegionclassEntity">
		insert into tb_region_class (
			rc_id,
			rc_name,
			rc_description
			)   
		values (
			#{id},
			#{rcName},
			#{rcDescription}
			)  
	</insert>
	
	<!-- 搜索数据 -->
	<select id="queryListByPage" parameterType="map" resultMap="regionclassMap" flushCache="true" useCache="true">
		SELECT
		rc_id,
		rc_name,
		rc_description
		FROM tb_region_class
		<where>
			<if test="rcName != null and rcName != ''">
				rc_name LIKE CONCAT('%','${rcName}','%' )
			</if>
		</where>
	</select>
	
	<!-- 点击编辑按钮时候查询单条数据 -->
	<select id="findById" parameterType="String" resultMap="regionclassMap" flushCache="true" useCache="true">
		SELECT
		rc_id,
		rc_name,
		rc_description
		FROM tb_region_class
		where rc_id = #{id}
	</select>
	
	<!-- 更新数据 -->
	<update id="update" parameterType="com.dcits.govsbu.sd.taxbankplatform.regionclass.model.RegionclassEntity" flushCache="true">
		update tb_region_class
		<set>
			<if test="rcName != null and rcName != ''">
				rc_name = #{rcName},
			</if>
			<if test="rcDescription != null and rcDescription != ''">
				rc_description = #{rcDescription},
			</if>
		</set>
		where rc_id = #{id}
	</update>
	
	<!-- 删除数据 -->
	<delete id="deleteBatchById" parameterType="list">
		<![CDATA[  
       delete from tb_region_class where rc_id in  
    	]]>  
	    <foreach collection="list" item = "id" open="(" separator="," close=")">
	    #{id}  
	    </foreach>  
	</delete>
</mapper>