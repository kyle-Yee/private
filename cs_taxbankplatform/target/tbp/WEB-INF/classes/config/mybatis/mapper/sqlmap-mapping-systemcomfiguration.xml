<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.govsbu.sd.taxbankplatform.systemconfiguration.mapper.SystemMapper">
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> 
	<resultMap id="configurationMap" type="com.dcits.govsbu.sd.taxbankplatform.systemconfiguration.model.SystemEntity">
		<result property="xtcs" column="tscs_xtcs" />
		<result property="xtmc" column="tscs_xtmc"/>
		<result property="enabled" column="enabled"/>
		<result property="createdname" column="createdname"/>
	</resultMap>
	
	<select id="queryFlagByXtcs" parameterType="String" resultMap="configurationMap" flushCache="true" useCache="true">
		select tscs_xtcs,tscs_xtmc,enabled
		from tb_system_configuration_switch where tscs_xtcs = #{xtcs}
	</select>
	
	<insert id="insert" parameterType="com.dcits.govsbu.sd.taxbankplatform.systemconfiguration.model.SystemEntity" useGeneratedKeys="true" keyProperty="id">
		insert  into tb_system_configuration_switch (
			tscs_xtcs,
			tscs_xtmc,
			enabled,
			createdtime,
			createdname
			)   
		values (
			#{xtcs},
			#{xtmc},
			#{enabled},
			 date_format(now(), '%Y-%m-%d %H:%i:%s'),
			#{createdname}
			)  
	</insert>
	
</mapper>