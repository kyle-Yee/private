<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="http://cxf.apache.org/jaxrs 
			http://cxf.apache.org/schemas/jaxrs.xsd
			http://cxf.apache.org/jaxws 
			http://cxf.apache.org/schemas/jaxws.xsd
			http://www.springframework.org/schema/beans  
           	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd "
           	default-lazy-init="true">

	<description>Apache CXF的 Service配置</description>
	
	<!-- Apache CXF的 SOAP Web Service配置  -->
	
	<!-- jax-ws endpoint定义  -->
	<!-- 注意address的前缀是web.xml中CXFServlet配置url-pattern  /sypt/ws/* -->
	<!-- http://localhost:8080/TBP/sypt/ws/soap/traditionalSOAPWebService?wsdl -->
	<jaxws:endpoint address="/soap/traditionalSOAPWebService">
		<jaxws:implementor ref="traditionalSOAPWebService" />
	</jaxws:endpoint>

	<!-- WebService的实现Bean定义 -->
	<bean id="traditionalSOAPWebService" 
	class="com.dcits.govsbu.sd.taxbankplatform.webservice.impl.TraditionalSOAPWebServiceImpl" />


</beans>    